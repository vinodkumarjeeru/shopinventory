<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Shop Inventory</display-name>
     <welcome-file-list>
        <welcome-file>
            createCustomer.jsp
        </welcome-file>
    </welcome-file-list>
   <servlet>
        <servlet-name>RootServlet</servlet-name>
        <servlet-class>org.shop.web.utils.RootController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RootServlet</servlet-name>
        <url-pattern>/RootController</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MyController</servlet-name>
        <servlet-class>org.shop.web.controllers.MyController</servlet-class>
    </servlet>
     <servlet-mapping>
        <servlet-name>MyController</servlet-name>
        <url-pattern>/mine</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateCustomer</servlet-name>
        <servlet-class>org.shop.web.controllers.CreateCustomerController</servlet-class>
    </servlet>
     <servlet-mapping>
        <servlet-name>CreateCustomer</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
   
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
