<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.shop.domain.Purchase" table="purchase">
        <id name="bill_Id" column="bill_Id" type="java.lang.Long">
            <generator class="native"/>
        </id>
        
        <many-to-one name="customer_Id" column="customer_Id" unique="true" cascade="all"></many-to-one>
        <many-to-one name="item_Id" column="item_Id" unique="true" cascade="all"></many-to-one>
        <property name="purchase_Date" column="date" type="java.util.Date"></property>
        <many-to-one name="sid" column="item_desc_id" unique="true" cascade="all"></many-to-one>
    </class>
</hibernate-mapping>
