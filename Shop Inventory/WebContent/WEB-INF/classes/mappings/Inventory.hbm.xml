<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.shop.domain.Inventory" table="inventory">
        <id name="inventory_Id" column="inventory_Id" type="java.lang.Long">
            <generator class="native"/>
        </id>
        <many-to-one name="customer_Id" column="customer_Id" type="org.shop.domain.Customer" unique="true" cascade="all"></many-to-one>
        <many-to-one name="purchase_Id" column="purchase_Id" type="org.shop.domain.Purchase" unique="true" cascade="all"></many-to-one>
        <many-to-one name="address_Id" column="address_Id" type="org.shop.domain.Address" unique="true" cascade="all"></many-to-one>
    </class>
</hibernate-mapping>
